page {
  background-color: #fff;
}

.course-container {
  padding: 0 35rpx;
  border-bottom: 1px solid #ebebeb;
}

.courseMapBox {
  padding: 20rpx 0;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
  display: flex;
  flex-direction: row;
}

.courseMap {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  border: 1px solid #ebeef5;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.courseMap>image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.course-introduceBox {
  margin-bottom: 1px solid #eee;
}

.course-introduceBox>text {
  display: block;
}

.course-title {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.annotation {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #20a4ff;
}

.course-introduce {
  display: -webkit-box;
  font-size: 30rpx;
  color: #999;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.inputNumberBox {
  padding: 30rpx;
  font-size: 34rpx;
}

.priceCourse {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.priceCourse>view:nth-child(2) {
  color: #777;
}

.priceCourse:nth-child(2) {
  margin-bottom: 0;
}

.priceCourseTip {
  color: #20a4ff;
}

.priceCourse>view {
  flex: 1;
}

.priceCourse>view:nth-child(2) {
  text-align: right;
}

.quantityBox {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.quantity {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 200rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
}

.quantity >text {
  background: #f5f7fa;
  font-size: 34rpx;
  line-height: 60rpx;
}

#plus {
  flex: 3;
  line-height: 60rpx;
  border: 1px solid rgb(204, 204, 204);
  border-radius: 10rpx 0 0 10rpx;
}

#minus {
  flex: 3;
  line-height: 60rpx;
  border: 1px solid rgb(204, 204, 204);
  border-radius: 0 10rpx 10rpx 0;
}

#iptnum {
  flex: 5;
  height: 60rpx;
  line-height: 60rpx;
  border-top: 1px solid rgb(204, 204, 204);
  border-bottom: 1px solid rgb(204, 204, 204);
}

.units {
  margin-left: 10rpx;
  line-height: 60rpx;
}

.description-container {
  padding-bottom: 100rpx;
}

.description-container>image {
  width: 100%;
  display: block;
}

.purchaseBtn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #19a2ff;
  display: flex;
  justify-content: center;
}

.purchaseBtn>text {
  font-size: 30rpx;
  color: #fff;
}
