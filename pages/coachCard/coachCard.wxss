.businessCard-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.businessCard {
  width: 620rpx;
  height: 780rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0 10rpx 0 20rpx;
  border-radius: 20rpx;
  border: 1px solid #ebeef5;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.coachInfo-container {
  display: flex;
  flex-direction: row;
  padding: 60rpx 80rpx;
  padding-bottom: 0rpx;
}

.coachImgBox {
  width: 130rpx;
  height: 130rpx;
  margin-right: 25rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  border: 1px solid #ebeef5;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.coachImg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
}

.coachStatusBox {
  display: flex;
  flex-direction: column;
  margin-top: -5rpx;
}

.coachStatus {
  display: flex;
  flex-direction: row;
}

.coachName > .nameStyle {
  display: block;
  font-size: 40rpx;
  color: #333;
  width: 155rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.schoolAge {
  width: 120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1px solid #ff5047;
  box-sizing: border-box;
  margin-top: 15rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.schoolAge>text {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #ff5047;
}

.drivingSchool {
  font-size: 34rpx;
  color: #19a2ff;
  text-align: left;
  margin-top: 25rpx;
}

.qr-container {
  width: 450rpx;
  height: 450rpx;
  margin-top: 50rpx;
  /* border: 1px solid #f5f5f5; */
}

.qr-container>image {
  width: 450rpx;
  height: 450rpx;
}

/* 按钮部分 */

.searchMode {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.searchModeItem {
  width: 620rpx;
  height: 110rpx;
  margin-bottom: 30rpx;
  line-height: 110rpx;
  text-align: center;
  border-radius: 55rpx;
  background-color: #19a2ff;
  position: relative;
  box-sizing: border-box;
}

.unBindCoach {
  background-color: #fff;
  border: 1px solid #19a2ff;
}

.searchModeItem>text {
  font-size: 30rpx;
  color: #fff;
}

.unBindCoach>text {
  color: #19a2ff;
}

.searchModeItem>.whiteArrow {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 30rpx;
  height: 30rpx;
}
